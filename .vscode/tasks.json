{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "bundle install",
      "type": "shell",
      "command": "bundle",
      "args": [
        "install"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "none"
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "panel": "dedicated",
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "bundle update",
      "type": "shell",
      "command": "bundle update",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "none"
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "panel": "dedicated",
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "Tailwind CSS",
      "type": "shell",
      "command": "rails",
      "args": [
        "tailwindcss:watch"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "none"
      },
      "presentation": {
        "reveal": "never",
        "revealProblems": "onProblem",
        "panel": "dedicated",
        "focus": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "127.0.0.1:3000",
      "type": "shell",
      "command": "bundle",
      "args": [
        "exec",
        "rails",
        "server"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "none"
      },
      "presentation": {
        "reveal": "never",
        "revealProblems": "onProblem",
        "panel": "dedicated",
        "focus": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
